<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque"
    >

    <!--Also available: @drawable:launcher_screen_with_background-->

    <!--Background color of your Splash Screen-->
    <item android:drawable="@color/white" />

    <item


        android:gravity="center"
        >
        <!--This logo is 144x144 px. If your image is larger, you should scale it to fit nicely-->
        <bitmap
            android:gravity="center"
            android:mipMap="true"
            android:src="@mipmap/wide_logo" />
    </item>

</layer-list>